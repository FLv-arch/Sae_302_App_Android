<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_app"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#26000000" /> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dossiers clients"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddDossier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un dossier"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="14dp"
        android:textColor="#1A237E"
        android:layout_marginBottom="24dp"
        app:cornerRadius="24dp"
        app:backgroundTint="#FFCC99"
        app:elevation="4dp"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="#1A237E" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDossiers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

</LinearLayout>

</FrameLayout>